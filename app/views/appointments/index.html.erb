<h1>Appointments</h1>

<button><%= link_to "Add Appointment", new_appointment_path %></button>
<% @appointments.each do |appointment |%>
<p>
    <%= link_to appointment.pet.name, pet_path(appointment.pet) %> has an appointment at 
    <%= link_to appointment.start_time.strftime('%b %e, %l:%M %p'), appointment_path(appointment) %> with 
    <%= link_to appointment.vet_name, veterinarian_path(appointment.veterinarian) %>
</p>

<% end %>

