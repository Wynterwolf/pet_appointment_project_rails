<%= show_errors_for(appointment) %>

<%= form_for appointment do |f| %>

<p>
    <%= f.label :pet_id, "Pet" %>
    <%= f.collection_select :pet_id, current_user.pets, :id, :name %>
</p>

<p>
    <%= f.label :veterinarian_id, "Veterinarian" %>
    <%= f.collection_select :veterinarian_id, Veterinarian.all, :id, :name %>
</p>

<p>
    <%= f.label :location %>
    <%= f.text_field :location %>
</p>

<p>
    <%= f.label :start_time %>
    <%= f.datetime_field :start_time %>
</p>

<p>
    <%= f.label :end_time %>
    <%= f.datetime_field :end_time %>
</p>

<%= f.submit %>
<% end %>
